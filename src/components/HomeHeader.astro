---
export interface Props {
title: string;
description: string;
}
const { title, description, city } = Astro.props;
// Remove # from title if present and capitalize for display
const rawTag = title?.startsWith('#') ? title.slice(1) : title;
const displayTag = rawTag ? rawTag.charAt(0).toUpperCase() + rawTag.slice(1) : '';
---
<style>
  .responsive-header {
      font-size: 6rem;
  }
  @media (max-width: 800px) {
      .responsive-header {
          font-size: 3rem;
      }
  }
</style>

<header class="flex flex-col content py-8">
  <h2 data-test="header-description" class="font-jakarta font-normal text-5xl pt-4">
    <span class="text-customGreen1">Chattanooga</span> Guides to <span class="text-customGreen1">{displayTag}</span><span class="text-customGreen1">.</span>
  </h2>
</header>