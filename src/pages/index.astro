    <article class="max-w-6xl mx-auto px-3">
      <header class="pt-10 content">
        <h1 class="font-jakarta font-normal text-5xl">Explore our local <span class="text-customGreen1">Chattanooga</span> Guides</h1>
      </header>
      <section class="grid grid-cols-1 lg:grid-cols-2 gap-8 py-8">
        {guidesPage.map((g) => (
          <div class="col-span-1">
            <Card post={g} />
          </div>
        ))}
      </section>
      {sortedGuides.length > 15 && (
        <div class="text-center mt-4">
          <a href="/chattanooga/guides/page/2" class="underline text-blue-600 font-semibold">View more guides →</a>
